<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:elevation="10dp"
    app:cardCornerRadius="25dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:id="@+id/cancel_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_cancel_24" />

        <ImageView
            android:id="@+id/add_time_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/cancel_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_access_alarms_24" />

        <TextView
            android:id="@+id/text_schedule_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_time_image"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="@string/text_schedule_online"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_schedule_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_schedule_online"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="@string/text_time"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_schedule_go_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_schedule_time"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/text_go_online"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <Button
            android:textSize="11sp"
            android:id="@+id/button_online"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/text_schedule_go_online"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radio_flat_selector"
            android:text="@string/button_online"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/text_reschedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_online"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="@string/text_reschedule"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>