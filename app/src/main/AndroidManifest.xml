<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.astroacharyamukti">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Astroacharyamukti">
        <activity
            android:name="com.acharyamukti.astrologer.activity.FilterActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.acharyamukti.astrologer.activity.HelpAndSupport"
            android:exported="false"
            android:label="Help and Supports" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.UserProfile"
            android:exported="false"
            android:label="User Profile" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.FAQ"
            android:exported="false"
            android:label="Frequently Asked Questions" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.ReviewActivity"
            android:exported="false"
            android:label="Customer Review" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.MyEarningActivity"
            android:exported="false"
            android:label="My Earning" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.LanguageActivity"
            android:exported="true"
            android:label="Change Language" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.PrivacyPolicy"
            android:exported="true"
            android:label="Privacy Policy" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.HomeActivity"
            android:exported="false"
            android:label="User Details"
            android:theme="@style/Theme.Astroacharyamukti.NoActionBar" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.Login"
            android:exported="false"
            android:focusableInTouchMode="true"
            android:theme="@style/Theme.Astroacharyamukti.NoActionBar" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.Launcher"
            android:exported="true"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.acharyamukti.astrologer.activity.BookAppointment"
            android:exported="false"
            android:label="Book Appointment" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.BankDetails"
            android:exported="true"
            android:label="Add Bank Details" />
        <activity
            android:name="com.acharyamukti.astrologer.activity.MainActivity"
            android:exported="true"/>
    </application>
</manifest>